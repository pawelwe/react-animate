{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es5", "es6", "esnext"],
    "esModuleInterop": true,
  },
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "node_modules",
    "./dist/"
  ]
}
